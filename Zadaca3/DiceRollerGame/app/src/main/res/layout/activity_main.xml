<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DiceRollerActivity"
        android:padding="50dp">


    <ImageView
            android:id="@+id/ivDice01"
            android:layout_width="@dimen/diceWidth"
            android:layout_height="@dimen/diceHeight"
            android:layout_margin="@dimen/sizeOfMargin"
            app:layout_constraintRight_toLeftOf="@id/ivDice02"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/dice01"

    />
    <ImageView
            android:id="@+id/ivDice02"
            android:layout_width="@dimen/diceWidth"
            android:layout_height="@dimen/diceHeight"
            android:layout_margin="@dimen/sizeOfMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/dice02"
    />
    <ImageView
            android:id="@+id/ivDice03"
            android:layout_width="@dimen/diceWidth"
            android:layout_height="@dimen/diceHeight"
            android:layout_margin="@dimen/sizeOfMargin"
            app:layout_constraintLeft_toRightOf="@id/ivDice02"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/dice03"
    />
    <ImageView
            android:id="@+id/ivDice04"
            android:layout_width="@dimen/diceWidth"
            android:layout_height="@dimen/diceHeight"
            android:layout_margin="@dimen/sizeOfMargin"
            app:layout_constraintRight_toLeftOf="@id/ivDice05"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDice01"
            android:src="@drawable/dice04"
    />
    <ImageView
            android:id="@+id/ivDice05"
            android:layout_width="@dimen/diceWidth"
            android:layout_height="@dimen/diceHeight"
            android:layout_margin="@dimen/sizeOfMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDice02"
            android:src="@drawable/dice05"
    />
    <ImageView
            android:id="@+id/ivDice06"
            android:layout_width="@dimen/diceWidth"
            android:layout_height="@dimen/diceHeight"
            android:layout_margin="@dimen/sizeOfMargin"
            app:layout_constraintLeft_toRightOf="@id/ivDice05"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDice03"
            android:src="@drawable/dice06"
    />

    <Button

            android:id="@+id/btnBacaj"
            android:text="@string/textButton"
            android:background="@color/backgorund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDice05"
            app:layout_constraintBottom_toBottomOf="parent"

    />

    <Button
            android:id="@+id/btnBacajPonovno"
            android:layout_width="160dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/btnBacaj"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/tvTextSize"
            android:hint="@string/tvPonovnoBacanje"


    />



</android.support.constraint.ConstraintLayout>