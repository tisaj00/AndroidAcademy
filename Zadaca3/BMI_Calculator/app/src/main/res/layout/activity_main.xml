<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BMIActivity">

<ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/background"
        />
    <TextView
        android:id="@+id/tvHeightInMeter"
        android:layout_width="@dimen/main_width"
        android:layout_height="@dimen/main_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/HintsTextHeight"
        android:textSize="@dimen/textSize"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/font"
        android:layout_marginStart="10dp"/>
    <EditText
            android:id="@+id/etMeters"
            android:inputType="numberDecimal"
            android:gravity="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvHeightInMeter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:id="@+id/tvWeightInKilo"
            android:layout_width="@dimen/main_width"
            android:layout_height="@dimen/main_height"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/etMeters"
            android:hint="@string/hintsTextWeight"
            android:textSize="@dimen/textSize"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/font"
            android:layout_marginStart="10dp"/>
    <EditText
            android:id="@+id/etWeight"
            android:inputType="numberDecimal"
            android:gravity="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvWeightInKilo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <Button
            android:id="@+id/btnCalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etWeight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:text="@string/btnText"
    />
    <ImageView
            android:id="@+id/ImageBMI"
            android:layout_width="200dp"
            android:layout_height="600dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnCalculator"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/ResultBMI"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnCalculator"
            app:layout_constraintLeft_toRightOf="@id/ImageBMI"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:textSize="@dimen/textSize"
            android:textColor="@color/font"
            android:layout_marginEnd="16dp"

    />
    <TextView
            android:id="@+id/TextBMIResult"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ImageBMI"
            app:layout_constraintTop_toBottomOf="@id/ResultBMI"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:textSize="@dimen/textSize"
            android:textColor="@color/font"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/TextBMi"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/TextBMIResult"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ImageBMI"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/textSize"
            android:textColor="@color/font"
            android:gravity="center"
            android:layout_marginStart="8dp"
    />
</android.support.constraint.ConstraintLayout>


