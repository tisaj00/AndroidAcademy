<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.TaskDetailsFragment">
    <TextView
            android:id="@+id/detailsTaskTitle"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/HeadingTextView"/>
    <TextView
            android:id="@+id/detailsTaskDescription"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/detailsTaskTitle"
            app:layout_constraintRight_toRightOf="@id/detailsTaskTitle"
            app:layout_constraintTop_toBottomOf="@id/detailsTaskTitle"
            android:layout_marginTop="@dimen/marginLarge"/>
    <ImageView
            android:id="@+id/detailsPriorityView"
            android:layout_width="@dimen/detailsPriorityWidth"
            android:layout_height="@dimen/detailsPriorityHeight"
            app:layout_constraintLeft_toLeftOf="@id/detailsTaskTitle"
            app:layout_constraintRight_toRightOf="@id/detailsTaskTitle"
            app:layout_constraintTop_toBottomOf="@id/detailsTaskDescription"/>

    <TextView
            android:id="@+id/editTaskHeading"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/HeadingTextView"
            app:layout_constraintTop_toBottomOf="@id/detailsPriorityView"
            android:layout_marginBottom="@dimen/marginLarge"
            android:text="@string/editTaskHeadingText"
            android:gravity="center"

            />
    <EditText
            android:id="@+id/editTaskTitleInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/newTaskTitleInputHint"
            android:layout_marginBottom="@dimen/marginLarge"
            android:inputType="text"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/editTaskDescriptionInput"
            app:layout_constraintTop_toBottomOf="@id/editTaskHeading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"

            tools:ignore="Autofill"/>
    <EditText
            android:id="@+id/editTaskDescriptionInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/newTaskDescriptionInputHint"
            android:layout_marginBottom="@dimen/marginLarge"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/editTaskTitleInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            tools:ignore="Autofill"/>
    <Spinner
            android:id="@+id/editPrioritySelector"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/priorities"
            app:layout_constraintTop_toBottomOf="@id/editTaskDescriptionInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/marginLarge"/>
    <Button
            android:id="@+id/editSaveTaskAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginLarge"
            android:layout_marginBottom="@dimen/marginLarge"
            android:layout_gravity="center"
            android:text="@string/saveTaskActionText"
            app:layout_constraintTop_toBottomOf="@id/editPrioritySelector"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>